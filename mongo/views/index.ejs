<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChatsApp</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h1>ALL CHATS !</h1>

    <form method="get" action="/chats/new">
        <button>New Chat</button>
        </form>
        <br>
        <form method="get" action="/admin">
        <button>Admin</button>
        </form>
    
    

   <% for(let chat of chats){  %>

        <div class="chat">
         <p>From : <%= chat.from %></p>
         <div>
             <p class="message">Message : <%= chat.message %> </p>
             <form method="get" action="/chats/<%= chat._id%>/edit"><button>Edit</button></form>
             <form method="POST" action="/chats/<%= chat._id %>">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit">Delete</button>
              </form>
              
         </div>
         <p>To : <%= chat.to %></p>
         
         <hr>
         
        </div>
        <br>
        
          
 <%  } %>
 <form method="get" action="/chats/feedback">
    <button>Feedback</button>
</form>

</body>
</html>

